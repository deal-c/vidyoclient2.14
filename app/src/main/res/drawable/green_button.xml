<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
   <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="@color/gray"
                android:centerColor="@color/dark_gray"                
                android:endColor="@color/dark_gray"
                android:angle="270" ></gradient>
            <stroke
                android:width="1dp"
                android:color="@color/gray" />	<!-- gray -->
            <corners 
                android:radius="3dp" ></corners>
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" ></padding>
        </shape>
   	</item>

   <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="@color/green"
                android:centerColor="@color/dark_green"                
                android:endColor="@color/dark_green"
                android:angle="270" ></gradient>
            <stroke
                android:width="1dp"
                android:color="@color/gray" />	<!-- gray -->
            <corners 
                android:radius="3dp" ></corners>
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" ></padding>
        </shape>
   	</item>

   <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/green"
                android:centerColor="@color/dark_green"                
                android:endColor="@color/dark_green"
                android:angle="270" ></gradient>
            <stroke
                android:width="1dp"
                android:color="@color/gray" />	<!-- gray -->
            <corners 
                android:radius="3dp" ></corners>
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" ></padding>
        </shape>
    </item>

    <item>        
        <shape>
            <gradient            
            	android:startColor="@color/light_green"             
                android:centerColor="@color/dark_green"   
                android:endColor="@color/green"   
                android:angle="270" ></gradient>
            <stroke
                android:width="1dp"
                android:color="@color/gray" />  <!-- gray -->
            <corners
                android:radius="3dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>
   
</selector>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingBottom="1dp"
    android:background="@color/white">



    <Button
        android:id="@+id/createRom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"


   android:background="@color/dark_yellow"

        android:paddingBottom="1dp"

        android:scaleType="fitCenter"
        android:src="@drawable/create"
        android:text="创建新会议"
        android:textColor="#ff000000"
        android:textSize="16.0sp" />



    <LinearLayout

        android:id="@+id/myView"
        android:layout_width="match_parent"
        android:layout_height="190.0dip"
        android:background="@drawable/souyebg"
        android:gravity="top|center"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button

               android:id="@+id/btngal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/backconf"

                />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgface_my"
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:src="@drawable/touxiang1" />

        <TextView
            android:id="@+id/tx_nihao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:gravity="center_horizontal"
            android:text="大海,您好"
            android:textAlignment="center"
            android:textColor="#ff000000"
            android:textSize="16.0dip" />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bnt_callservice"
                android:layout_width="0.0dip"
                android:layout_height="45.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="0.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/bnt_custom_green"
                android:drawableLeft="@drawable/kedu"
                android:paddingBottom="5.0dip"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:paddingTop="5.0dip"
                android:text="呼叫客服中心"
                android:textColor="@color/white"
                android:textSize="16.0dip" />
            <Button
                android:id="@+id/bnt_callmanager"
                android:layout_width="0.0dip"
                android:layout_height="45.0dip"
                android:layout_marginTop="0.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/bnt_custom_blue"
                android:drawableLeft="@drawable/kehujingli"
                android:paddingBottom="5.0dip"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:paddingTop="5.0dip"
                android:text="呼叫客服经理"
                android:textColor="@color/white"
                android:textSize="16.0dip" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/myView"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="#fff1f1f1">
        <LinearLayout
            android:id="@+id/view_notifylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>






</RelativeLayout>